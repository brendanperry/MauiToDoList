<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="MauiToDoList.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiToDoList"
    xmlns:pages="clr-namespace:MauiToDoList.Pages"
    Title="MauiToDoList">
    <TabBar>
        <Tab>
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>

        <Tab>
            <ShellContent
                Title="To Do List"
                ContentTemplate="{DataTemplate pages:ToDoList}"
                Route="ToDoList" />
        </Tab>
    </TabBar>
</Shell>